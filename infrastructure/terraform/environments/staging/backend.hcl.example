# =============================================================================
# Staging - Terraform S3 Backend Configuration
# =============================================================================
# Copy to backend.hcl: cp backend.hcl.example backend.hcl
# Then: terraform init -backend-config=backend.hcl
# =============================================================================

bucket         = "bossnyumba-terraform-state"
key            = "bossnyumba/staging/terraform.tfstate"
region         = "eu-west-1"
encrypt        = true
dynamodb_table = "bossnyumba-terraform-locks"
