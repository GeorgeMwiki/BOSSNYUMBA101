{
  "name": "@bossnyumba/api-gateway",
  "version": "0.1.0",
  "private": true,
  "description": "API Gateway / BFF for BOSSNYUMBA platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__",
    "test:integration:watch": "vitest src/__tests__",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@bossnyumba/authz-policy": "workspace:*",
    "@bossnyumba/database": "workspace:*",
    "@bossnyumba/domain-models": "workspace:*",
    "@hono/node-server": "^1.11.0",
    "@hono/zod-validator": "^0.7.6",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  }
}
